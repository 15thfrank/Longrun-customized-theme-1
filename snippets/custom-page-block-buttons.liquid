<style>
    .btn.btn--large {
        padding: 15px 20px;
        font-size: .9em;
    }
</style>

<div class="index-section " style="margin-top:25px;">
    <div class="page-width">
      <div class="grid text-center">
        <div class="grid__item medium-up--three-quarters medium-up--push-one-eighth">
          
          
            <div class="rte">
              <div class="enlarge-text">
                  {% if block.settings.btn_block_btn1_show == true %}
                    <a class="btn btn--large" href="{{block.settings.button_one_url}}" {% if block.settings.btn_one_nw == true %}target="_blank"{% endif %}>{{block.settings.button_one_text}}</a>
                  {% endif %}

                  {% if block.settings.btn_block_btn2_show == true %}
                    <a class="btn btn--large" href="{{block.settings.button_two_url}}" {% if block.settings.btn_two_nw == true %}target="_blank"{% endif %}>{{block.settings.button_two_text}}</a>
                  {% endif %}

                  {% if block.settings.btn_block_btn3_show == true %}
                    <a class="btn btn--large" href="{{block.settings.button_three_url}}" {% if block.settings.btn_three_nw == true %}target="_blank"{% endif %}>{{block.settings.button_three_text}}</a>
                  {% endif %}

                  

              </div>
            </div>
          
        </div>
      </div>
    </div>
  </div>