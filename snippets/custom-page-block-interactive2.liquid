{% style %}
.c_logo_list {
    background: {%- if bgcolor -%}{{bgcolor}}{%- endif -%};
    padding-top: 35px;
    padding-bottom: 35px;
}
.logo-bar__item, #section-header {
    transition: 0.5s
}
{% endstyle %}

<script type="text/javascript">
    function changeHeading(text)
    {
        var display = document.getElementById('entryheading');
        display.innerHTML = "";
        display.innerHTML = text;
    }

    function changeText(text)
    {
        var display = document.getElementById('entrytext');
        display.innerHTML = "";
        display.innerHTML = text;
    }

</script>

<div class="c_logo_list text-center" data-aos="logo__animation">
    <div class="section-header">
        <h2 class="section-header__title" style="{%- if textcolor -%} color: {{textcolor}}; {%- endif -%}" id="entryheading">{{ block.settings.entry_one_heading | escape }}</h2>
        <p style="margin-top: 10px;{%- if textcolor -%} color: {{textcolor}}; {%- endif -%}" id="entrytext"> {{block.settings.entry_one_desc}}</p>
    </div>
  
    <div class="logo-bar logo-bar--{{ section.id }}">
        {%- if block.settings.entry_one_show == true -%}
            <div class="logo-bar__item" {{ block.shopify_attributes }} onmouseover="changeHeading('{{entryoneheading}}'); changeText('{{entryonedesc}}')">
                {% if block.settings.entry_one_link != blank %}
                    <a href="{{ block.settings.entry_one_link }}" class="logo-bar__link">
                {% endif %}
                {% if block.settings.entry_one_img != blank %}
                    {%- assign img_url = block.settings.entry_one_img | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                    <img class="logo-bar__image lazyload"
                        data-src="{{ img_url }}"
                        data-widths="[180, 360, 540, 720]"
                        data-aspectratio="{{ block.settings.entry_one_img.aspect_ratio }}"
                        data-sizes="auto"
                        alt="{{ block.settings.entry_one_img.alt }}">
                {% else %}
                    {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                {% if block.settings.entry_one_link != blank %}
                    </a>
                {% endif %}
            </div>
        {%- endif -%}

