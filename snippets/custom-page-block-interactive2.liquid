{% assign bgcolor = block.settings.entry_list_bg%}
{% assign textcolor = block.settings.entry_list_textcolor %}
{% assign entryoneheading = block.settings.entry_one_heading %}
{% assign entryonedesc = block.settings.entry_one_desc %}
{% assign entrytwoheading = block.settings.entry_two_heading %}
{% assign entrytwodesc = block.settings.entry_two_desc %}
{% assign entrythreeheading = block.settings.entry_three_heading %}
{% assign entrythreedesc = block.settings.entry_three_desc %}
